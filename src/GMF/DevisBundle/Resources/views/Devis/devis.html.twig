{# Devis #}

<!DOCTYPE html>
<html>
<head>
	<title>Devis {{devis.numero}} - GIVE ME FIVE</title>

	<STYLE type="text/css">
	   .container {
		    width: 720px;
		    padding-right: 15px;
		    padding-left: 15px;
		    margin-right: auto;
		    margin-left: auto;
		}
	 </STYLE>
</head>
<body>
	<div class="container">
		
		<img src="{{ app.request.schemeAndHttpHost ~ asset('bundles/gmfdevis/images/logo-devis.png') }}" alt="logo de l'agence Give Me Five" />
		<p style="text-align: right"> DEVIS {{ devis.numero}} </p>

		<div>
			<p> Date: {{devis.date|date('d/m/Y')}}</p>
		</div>

		<div style="columns : 2;">
			<div>
				<p> Emetteur </p>
				<div>
					<div>
						<p> Votre contact : Prénom Nom </p>
						<p> Adresse : <br> 3 rue centre de marseille <br>
						13001, Marseille </p> 
						<p> Pays :  France</p>
						<p> Email : accueil@givemefive.artdevelopp.fr  </p>
					</div>
				</div>
			</div>
				

			<div>
				<p> Destinataire </p>

				<div>
					<p> Contact : {% if contact.company != null %} 
								{{contact.company }} 
								{% else %}
								{{ contact.name }} {{contact.surname|upper}}
								{% endif %} </p>
					<p> Adresse : <br>
						{{ contact.adress}} <br>
						{{contact.zipCode}}, {{ contact.city}}</p> 
					<p> Email : {{contact.email}}</p>
				</div>

			</div>
		</div> <br>

		<div>
			<p style="text-align: center"> Modules choisis : </p>
			{% set nModules = 0 %}
			{% set total = 0 %}

			{% if modules.fidelite != null %}
				<p style="text-align: right;"> Fidelité : 29.99€ </p>
				{% set nModules = nModules + 1 %}
				{% set total = total + 29.99 %}
			{% endif %}

			{% if modules.carte != null %}
				<p style="text-align: right;"> Carte interactive : 39.99€ </p>
				{% set nModules = nModules + 1 %}
				{% set total = total + 39.99 %}
			{% endif %}

			{% if modules.vente != null %}
				<p style="text-align: right;"> Vente de produits : 49.99€ </p>
				{% set nModules = nModules + 1 %}
				{% set total = total + 49.99 %}
			{% endif %}

			{% if modules.reservation != null %}
				<p style="text-align: right;"> Réservation : 59.99€ </p>
				{% set nModules = nModules + 1 %}
				{% set total = total + 59.99 %}
			{% endif %}

			{% if nModules == 3 %}
				<p style="text-align: right;"> Offres 3 Modules : - 10.00€ </p>
				{% set total = total - 10.00 %}
			{% elseif nModules == 4 %}
				<p style="text-align: right;"> Offres 4 Modules : - 20.00€ </p>
				{%set total = total - 20.00 %}	
			{% endif %}


			<p style="text-align: right"> Prix Total : {{ total}} € </p>
		</div>
	</div>

</body>
</html>