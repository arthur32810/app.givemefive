{% extends '::layout.html.twig' %}

{% block stylesheets %}
  {{ parent()}}
  <link rel="stylesheet" href="{{ asset('bundles/gmfadmin/css/admin.css') }}" type="text/css" />
{% endblock %}

{% block header %}
  <div class="row" id="navigation">
      <nav class="navbar navbar-expand-lg navbar-light" id="menu" >
          <!-- logo de l'agence -->
        <a class="navbar-brand" href="{{ path('gmf_devis_order')}}">
          <img src="{{ asset('bundles/gmfdevis/images/logo.png') }}" alt="logo de l'agence">
        </a>
      </nav>
  </div>
{% endblock %}

{% block body %}
  <div class="row">
    <div class="col-md-2" id="nav-admin">
      <nav class="nav flex-column">
        <a class="nav-link" href="{{path('gmf_admin_home')}} "> <h5><i class="far fa-file-alt"></i> Gestion des devis</h5> </a>
         <a class="nav-link" href="{{path('gmf_admin_modules')}}"> <h5> <i class="fas fa-mobile-alt"></i> Gestion des modules </h5></a>
         {% if is_granted("ROLE_ADMIN") %}
            <a class="nav-link" href="{{ path('gmf_admin_users')}}"> <h5> <i class="fas fa-users"></i> Gestion des utilisateurs </h5>
         {% endif %}
         <hr style="background-color: #01c597">
         {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
          <a class="nav-link" href="{{path('fos_user_profile_edit') }}"> <h5>  <i class="fas fa-user"></i> Modification de mon profil </h5> </a>
          <a class="nav-link" href="{{ path('fos_user_change_password') }}"> <h5><i class="fas fa-lock"></i> Modifier mon mot de passe </h5> </a>
          <a class="nav-link" href="{{ path('fos_user_security_logout') }}"><h5> <i class="fas fa-sign-out-alt"></i> Déconnexion</h5> </a>
        {% endif %}
      </nav>
    </div>
    <div class="col">
      {# On définit un nouveau bloc, que les vues du bundle pourront remplir #}
      {% block gmf_admin_body %}
      {% endblock %}
    </div> 
  </div>
{% endblock %}
